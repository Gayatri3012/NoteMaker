<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/auth.css">
    </head>

    <body>

        <main class=" flex justify-center w-full h-full bg-transparent">
            <div class="flex justify-center items-center w-1/2 h-auto" id="auth-form-container">
                  <!-- <form class="home-page" class="bg-black" action="/login" class="auth-form" method="post"> -->
                    <form class="flex flex-col justify-center items-center gap-4 m-4 p-4 border-2 w-2/3  rounded-md bg-indigo-400" action="/login" class="auth-form" method="post">
                    <% if(errorMessage){ %>
                        <div class="rounded-md bg-red-400">
                            <%= errorMessage %>
                        </div>
                        <% } %>
                            <h1 class="font-bold text-2xl">Welcome Back</h1>
                            <p>Enter your credentials to login</p>
                            <label for="email">Email</label>
                            <input type="email" class="w-full bg-gray-200 p-2 rounded-md text-gray-700" name="email" id="email" placeholder="Enter the Email">
                            <label for="password">Password</label>
                            <input class="w-full bg-gray-200 p-2 rounded-md text-gray-700" type="password" name="password" id="password" placeholder="Enter the Password">
                            <button class="p-2 font-semibold rounded-md bg-indigo-700 text-white hover:bg-indigo-900" type="submit">Login</button>
                            <p class="p-2">Don't have an account? <a href="/signup" class="text-white hover:text-indigo-700 font-medium">Sign Up</a></p>
                    </form>
            </div>
            <div class="w-1/2 flex justify-center items-center"  id="auth-image">
                <img src="./images/login.svg" class=" p-16" alt="login">
              </div>
          
        </main>


        <%- include('./includes/end.ejs') %>